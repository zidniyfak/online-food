<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_menu">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:paddingTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:backgroundTint="#EDBA32"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center">
        </TextView>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:src="@drawable/menyu">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="120dp"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ppp">
        </ImageView>

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@drawable/kotak_transparan"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:elevation="22dp">

           <LinearLayout
               android:layout_width="299dp"
               android:layout_marginStart="25dp"
               android:layout_marginEnd="30dp"
               android:layout_height="54dp"
               android:background="@drawable/kotak_transparan"
               android:elevation="22dp"
               android:layout_marginTop="50dp"
               android:orientation="vertical">

               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:hint="Username" />
           </LinearLayout>

            <LinearLayout
                android:layout_width="299dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_height="54dp"
                android:background="@drawable/kotak_transparan"
                android:elevation="22dp"
                android:layout_marginTop="130dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="Email" />
            </LinearLayout>'

            <LinearLayout
                android:layout_width="299dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_height="54dp"
                android:elevation="22dp"
                android:layout_marginTop="250dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEdtProfil"
                    android:layout_width="113dp"
                    android:layout_height="54dp"
                    android:layout_marginHorizontal="95dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Simpan"
                    android:textStyle="bold"
                    android:backgroundTint="#FFA45B"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>